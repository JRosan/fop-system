{
  "expo": {
    "name": "BVI FOP System",
    "slug": "bvi-fop-system",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "bvi-fop",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0066e6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "vg.gov.bvicad.fop"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0066e6"
      },
      "package": "vg.gov.bvicad.fop"
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan documents."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#0066e6"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
